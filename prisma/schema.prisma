datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id              Int       @id @default(autoincrement())
  adultFirstName  String
  adultLastName   String
  childFirstName  String?
  childLastName   String?
  description     String
  location        String
  time            String
  contact         String
  frequency       String
  learn           String
  special         String?
  signature       String  
  status          Status    @default(READY)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  requestor       User      @relation(fields: [requestorId], references: [id])
  requestorId     Int

  @@index(requestorId)
}

enum Status {
  READY
  PROGRESS
  DONE
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int

  @@index(authorId)
}

model Profile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId Int     @unique

  @@index(userId)
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  jobs    Job[]
  posts   Post[]
  profile Profile?
}

